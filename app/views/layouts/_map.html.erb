<div style='width: 100%;'>
  <div id="map" style='width: 100%; height: 90vh;'></div>
</div>
<script type="text/javascript">
  var mapStyle = [
      {
        "featureType": "landscape",
        "stylers": [
          {
            "hue": "#FFA800"
          },
          {
            "saturation": 0
          },
          {
