<% @walk.errors.each do |attr, msg| %>
<%= "#{attr} #{msg}" if @walk.errors[attr].first == msg %> 
<% end %>

<%= form_for @walk do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :distance %>
  <%= f.text_field :distance %>
  <%= f.label :start_location, "Start Point" %>
  <%= f.text_field :start_location %>
  <%= f.label :finish_location, "End Point" %>
  <%= f.text_field :finish_location %>
  <%= f.submit "Take A Walk" %>
<% end %>
