<div class="container-fluid sight-container">
  <div class="row">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <h4 class="title">Stats</h4>
      <ul class="types">
        <li>You have done <%= @walks.count %> walks</li>
        <li>You have seen<%= current_user.total_locations %> locations</li>
        <li>You have walked <%= current_user.total_distance %></li>
      </ul>
    </div>
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
      <ul class="row block-grid">
        <% @walks.each do |walk| %>
          <li class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <figure  class="sight-card">
              <a href="#">
                <%= image_tag walk.locations.sample.sight.image.url(:thumb) %>
                <figcaption>
                  <p class="sight-name"><%= walk.name %></p>
                  <p class="sight-kind"><%= walk.distance %></p>
                  <p class="sight-location"><span class="glyphicon glyphicon-map-marker"></span><%= walk.start_location.address %></p>
                </figcaption>
              </a>
            </figure>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
