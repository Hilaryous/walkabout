<div class= "new-walk-container">
  <div class="row">
    <div class= "col-md-6 walk-form">
      <h3 style="margin-left: 130px;">Upload a Photo</h3>

      <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9" style="margin-left: 100px;">
        <figure  class="sight-card">
          <a href="#">
            <%= image_tag @sight.image.url(:thumb) , id: "sight-image"%>
            <figcaption>
              <p class="sight-name"><%= @sight.name %></p>
              <p class="sight-kind"><%= @sight.kind %></p>
              <p class="sight-location"><span class="glyphicon glyphicon-map-marker"></span><%= @sight.location.address %></p>
            </figcaption>
          </a>
        </figure>
      </div>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="margin-top: 23%;">
      <br/>
      <%= s3_uploader_form(callback_url: sights_url, id: "s3_uploader", acl: "private", callback_param: "direct_upload_url", max_file_size: 40.megabytes) do %>
        <%= file_field_tag :file, multiple: false, class: "submit-photo-button btn btn-default btn-small"  %>
      <% end %>

      <div id="uploads_container"></div>

      <script id="template-upload" type="text/x-tmpl">
        <div id="upload_{%=o.unique_id%}" class="upload">
          <h5>{%=o.name%}</h5>
          <div class="progress progress-striped active"><div class="bar" style="width: 0%"></div></div>
        </div>
      </script>
      <br/>
      <%= form_for @sight, url: sight_path(@sight), method: :patch do |f| %>

        <% if @sight.errors.any? %>
        <ul>
          <% @sight.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        <% end %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :direct_upload_url %>
            <%= f.hidden_field :image_file_name %>
            <%= f.hidden_field :image_file_size %>
            <%= f.hidden_field :image_content_type %>
            <%= f.submit 'Upload', class: 'btn btn-success' %>
        <br/>
      <% end %>
    </div>
  </div>
</div>
